%div.panel.panel-default.col-md-12
  %div.panel-body
    %form{name: 'nuevaCuentaForm', 'ng-submit': 'nuevaCuentaForm.$valid && crear_cuenta()', novalidate:true}
      %div.input-group.input-group-lg
        %span{class:'input-group-addon'} @
        %input{class:'form-control', type:'email', name: 'email', 'ng-model': 'nueva_cuenta.email', placeholder:'e-mail', required: true}
      %div.sesion-separador
      %div.input-group.input-group-lg
        %span{class:'input-group-addon'}
          %span.glyphicon.glyphicon-lock
        %input{class:'form-control', type:'password', name: 'password', 'ng-model': 'nueva_cuenta.password', placeholder:'password', required: true, pattern: '.{8,}'}
      %div.sesion-separador
      %div.input-group.input-group-lg
        %span{class:'input-group-addon'}
          %span.glyphicon.glyphicon-repeat
        %input{class:'form-control', type:'password', name: 'password_confirmation', 'ng-model': 'nueva_cuenta.password_confirmation', placeholder:'confirmar password', required: true, pattern: '.{8,}'}
      %br
      %button{class:'btn btn-primary btn-lg sesion-btn', type:'submit', 'ng-disabled': 'nuevaCuentaForm.$invalid'} Crear Cuenta
      %div.sesion-separador
      %div.row
        %div.col-md-6
          %p.text-left.text-primary
            %a{'ng-click': 'volver()'}
              %span.glyphicon.glyphicon-triangle-left Volver
              
