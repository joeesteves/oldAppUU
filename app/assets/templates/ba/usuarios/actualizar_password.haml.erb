%div.sesion-fondo
  %img{class: 'img-fondo', src:'<%= asset_path("sesion_fondo.jpg") %>'}
  %div.col-md-6.col-md-offset-3.sesion-panel
    %div.panel.panel-default.col-md-12
      %div.panel-body
        %form{name: 'nuevaCredencialForm', 'ng-submit': 'nuevaCredencialForm.$valid && actualizar_password()', novalidate:true}
          %div.input-group.input-group-lg
            %span{class:'input-group-addon', id:'password-ref'}
              %span.glyphicon.glyphicon-lock
            %input{class:'form-control', type:'password', 'ng-model': 'nueva_credencial.password', placeholder:'contraseña', 'aria-describedby': 'password-ref', required: true, pattern: '.{8,}'}
          %div.sesion-separador
          %div.input-group.input-group-lg
            %span{class:'input-group-addon', id:'password-ref'}
              %span.glyphicon.glyphicon-repeat
            %input{class:'form-control', type:'password', 'ng-model': 'nueva_credencial.password_confirmation', placeholder:'confirmar contraseña', 'aria-describedby': 'password-ref', required: true, pattern: '.{8,}'}
          %br
          %button{class:'btn btn-primary btn-lg sesion-btn', type:'submit', 'ng-disabled': 'nuevaCredencialForm.$invalid'} Actualizar contraseña
          %div.sesion-separador
          %div.row
            %div.col-md-6
              %p.text-left.text-primary
                %a{'ng-click': 'volver()'}
                  %span.glyphicon.glyphicon-triangle-left
                  Volver
